            @Html.DisplayFor(modelItem => item.Name)
        </td>
    
        <th>
            @Html.DisplayFor(modelItem => item.ParentDepartmentName)
        </th>

        <td>
            @Html.DisplayFor(modelItem => item.StaffSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
